{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "FastAPI服务",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/server.py",
      "args": [],
      "console": "integratedTerminal",
      "justMyCode": true,
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "PORT": "8000",
        "HOST": "0.0.0.0",
        "RELOAD": "true"
      },
      "cwd": "${workspaceFolder}",
      "serverReadyAction": {
        "pattern": ".*Uvicorn running on (http://[^\\s]+)",
        "uriFormat": "%s/",
        "action": "openExternally"
      }
    },
    {
      "name": "Celery Worker",
      "type": "debugpy",
      "request": "launch",
      "module": "celery",
      "args": [
        "-A",
        "src.tasks.celery_tasks",
        "worker",
        "--pool=solo",
        "--loglevel=debug",
        "--concurrency=1",
        "--without-heartbeat",
        "--without-mingle"
      ],
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "REDIS_HOST": "localhost",
        "REDIS_PORT": "6379",
        "REDIS_DB": "0",
        "C_FORCE_ROOT": "true",
        "FORKED_BY_MULTIPROCESSING": "1"
      },
      "cwd": "${workspaceFolder}",
      "stopOnEntry": false,
      "purpose": ["debug-in-terminal"]
    },
    {
      "name": "PDF转图片",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/processors/image2cad.py",
      "args": [
        "pdf2images",
        "${workspaceFolder}/TestData/00 P2184 Combination.pdf",
        "",
        "--dpi=300",
        "--format=png"
      ],
      "console": "integratedTerminal",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
    }
      
    },
    {
      "name": "PNG矢量化",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/Image2CAD.py",
      "args": [
        "png2dxf",
        "${workspaceFolder}/uploads/temp/pdf_page_1/pdf_page_1.png",
        ""
      ],
      "console": "integratedTerminal",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
    }
    },
    {
      "name": "图片OCR",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/processors/ocr_processor.py",
      "args": [
        "ocr_process",
        "${workspaceFolder}/uploads/temp/pdf_page_1/pdf_page_1.png",
        "",
        "--scale_factor=2"       
      ],
      "console": "integratedTerminal",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
    }
    },
    {
        "name": "图片App",
        "type": "debugpy",
        "request": "launch",
        "program": "${workspaceFolder}/src/ui/image_app.py",
        "args": [      
            "${workspaceFolder}/uploads/temp/pdf_page_1/pdf_page_1.png",   
        ],
        "console": "integratedTerminal",
        "env": {
          "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "训练shx数据",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/training/train_shx.py",
      "args": [
        "train_tesseract"
      ],
      "console": "integratedTerminal",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
    }
    },
    {
      "name": "生成训练数据",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/train_shx.py",
      "args": [
        "create_training_textdata",
        "D:/Image2CADPy/src/characterset/",
        "D:/Image2CADPy/tesseract_train/"
      ],
      "console": "integratedTerminal",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
    }
    },
    {
      "name": "生成训练box",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/train_shx.py",
      "args": [
        "generate_box_file",
        "D:/Image2CADPy/TestData/chinese_test.png",
        "D:/Image2CADPy/TestData/chinese_test.box"
      ],
      "console": "integratedTerminal",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
    }
    },
    {
      "name": "dxf导出txt",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/processors/dxf_processor.py",
      "args": [
        "export_dxf_to_txt",
        "D:/Image2CADPy/TestData/pdfImages/output/pdf_page_51.dxf",
        "D:/Image2CADPy/TestData/pdf_page_51_dxf_output.txt"
      ],
      "console": "integratedTerminal",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
    }
    },
    {
      "name": "设置Tesseract",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/processors/image2cad.py",
      "args": [
        "set-tesseract",
        "/usr/bin/tesseract"
      ],
      "console": "integratedTerminal",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
    }
    },
    {
      "name": "服务访问",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/client.py",
      "args": [
        "ocr_image",
        "${workspaceFolder}/TestData/00 P2184 Combination.pdf"
      ],
      "console": "integratedTerminal",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
    }
    },
    {
      "name": "C/C++ Runner: Debug Session",
      "type": "cppdbg",
      "request": "launch",
      "args": [],
      "stopAtEntry": false,
      "externalConsole": true,
      "cwd": "${workspaceFolder}/src",
      "program": "${workspaceFolder}/src/build/Debug/outDebug",
      "MIMode": "gdb",
      "miDebuggerPath": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}